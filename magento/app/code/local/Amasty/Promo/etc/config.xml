                </observers>
            </sales_quote_product_add_after>
            <!--<controller_action_predispatch_checkout_cart_updateItemOptions>-->
                <!--<observers>-->
                    <!--<amasty_promo_model_observer>-->
                        <!--<type>singleton</type>-->
                        <!--<class>Amasty_Promo_Model_Observer</class>-->
                        <!--<method>onCartItemUpdateBefore</method>-->
                    <!--</amasty_promo_model_observer>-->
                <!--</observers>-->
            <!--</controller_action_predispatch_checkout_cart_updateItemOptions>-->
            <checkout_submit_all_after>
                <observers>
                    <amasty_promo_model_registry>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>onCheckoutSubmitAllAfter</method>
                    </amasty_promo_model_registry>
                </observers>
            </checkout_submit_all_after>
            <adminhtml_sales_order_create_process_data_before>
                <observers>
                    <amasty_promo_model_process_data_before_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>onAdminhtmlSalesOrderCreateProcessDataBefore</method>
                    </amasty_promo_model_process_data_before_observer>
                </observers>
            </adminhtml_sales_order_create_process_data_before>
            <adminhtml_block_salesrule_actions_prepareform>
                <observers>
                    <amasty_promo_model_actions_prepareform_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>handleFormCreation</method>
                    </amasty_promo_model_actions_prepareform_observer>
                </observers>
            </adminhtml_block_salesrule_actions_prepareform>
            <adminhtml_controller_salesrule_prepare_save>
                <observers>
                    <amasty_promo_salesrule_prepare_save_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>salesRulePrepareSave</method>
                    </amasty_promo_salesrule_prepare_save_observer>
                </observers>
            </adminhtml_controller_salesrule_prepare_save>
            <salesrule_rule_save_before>
                <observers>
                    <amasty_rules_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>saveBefore</method>
                    </amasty_rules_model_observer>
                </observers>
            </salesrule_rule_save_before>
            <salesrule_rule_save_after>
                <observers>
                    <amasty_rules_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>saveAfter</method>
                    </amasty_rules_model_observer>
                </observers>
            </salesrule_rule_save_after>
            <controller_action_predispatch_adminhtml_promo_quote_index>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>prePromoQuoteIndex</method>
                    </amasty_promo_model_observer>
                </observers>
            </controller_action_predispatch_adminhtml_promo_quote_index>
        </events>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ampromo>
                                            <title>Auto Add Promo Items</title>
                                        </ampromo>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <ampromo>
                    <file>amasty/ampromo/ampromo.xml</file>
                </ampromo>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <ampromo>
            <general>
                <prefix>FREE - </prefix>
                <message>FREE!</message>
                <auto_add>1</auto_add>
                <auto_add_downloadable>0</auto_add_downloadable>
                <free_shipping>1</free_shipping>
				<calculate_tax>1</calculate_tax>
                <apply_to_admin_orders>1</apply_to_admin_orders>
				<tax_in_subtotal>1</tax_in_subtotal>
				<default_currency>1</default_currency>
            </general>
            <popup>
                <add_message><![CDATA[Select your <a href="#">FREE GIFT</a>!]]></add_message>
            </popup>
            <messages>
                <display_notification>0</display_notification>
                <notification_text><![CDATA[You did not add any gift products to the cart. <a href="{url checkout/cart}#choose-gift">Check your available gifts!</a>]]></notification_text>
                <errors>1</errors>
                <success>1</success>
            </messages>
            <banners>
                <mode>product</mode>
                <single>1</single>
                <enabled_top>1</enabled_top>
                <enabled_above_cart>1</enabled_above_cart>
            </banners>
            <gift_images>
                <gift_image_width>50</gift_image_width>
                <gift_image_height>50</gift_image_height>
            <attribute_header>name</attribute_header>
                <attribute_description>short_description</attribute_description>
            </gift_images>
        </ampromo>
    </default>
</config>
