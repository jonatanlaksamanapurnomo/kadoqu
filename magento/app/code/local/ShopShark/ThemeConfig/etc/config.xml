<?xml version="1.0"?>
<config>
    <modules>
        <ShopShark_ThemeConfig>
            <version>1.0.0</version>
        </ShopShark_ThemeConfig>
    </modules>
    <frontend>
        <translate>
            <modules>
                <ShopShark_ThemeConfig>
                    <files>
                        <default>ShopShark_ThemeConfig.csv</default>
                    </files>
                </ShopShark_ThemeConfig>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <themeconfig>
                <use>admin</use>
                <args>
                    <module>ShopShark_ThemeConfig</module>
                    <frontName>themeconfig</frontName>
                </args>
            </themeconfig>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <ShopShark_ThemeConfig>
                    <files>
                        <default>ShopShark_ThemeConfig.csv</default>
                    </files>
                </ShopShark_ThemeConfig>
            </modules>
        </translate>
        <events>
            <controller_action_predispatch>
                <observers>
                    <themeconfig>
                        <type>singleton</type>
                        <class>ShopShark_ThemeConfig_Model_Feed</class>
                        <method>observe</method>
                    </themeconfig>
                </observers>
            </controller_action_predispatch>
        </events>
    </adminhtml>
    <global>
        <models>
            <ThemeConfig>
                <class>ShopShark_ThemeConfig_Model</class>
            </ThemeConfig>
        </models>
        <helpers>
            <ThemeConfig>
                <class>ShopShark_ThemeConfig_Helper</class>
            </ThemeConfig>
        </helpers>
        <blocks>
            <ThemeConfig>
                <class>ShopShark_ThemeConfig_Block</class>
            </ThemeConfig>
        </blocks>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <themeconfig>
                        <class>ShopShark_ThemeConfig_Model_Observer</class>
                        <method>addThemeConfigHandles</method>
                    </themeconfig>
                </observers>
            </controller_action_layout_load_before>
        </events>
        <resources>
            <themeconfig_setup>
                <setup>
                    <module>ShopShark_ThemeConfig</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </themeconfig_setup>
            <themeconfig_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </themeconfig_write>
            <themeconfig_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </themeconfig_read>
        </resources>
        <themeconfig />
    </global>
    <default>
        <milanoconfig>
            <activation_options>
