<config>
    <sections>
        <sociallogin>
            <groups>
                <wp translate="label">
                    <label>Wordpress Login</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <is_send_password_to_customer translate="label">
                            <label>Send password</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Send new password to customer</comment>
                        </is_send_password_to_customer>
                        <redirect_url translate="label comment">
                            <label>Callback URL</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>sociallogin/adminhtml_system_config_form_field_redirectUrl</frontend_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </redirect_url>
                        <wp_image translate="label">
                            <label>Button Image</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">sociallogin/img</upload_dir>
                            <base_url type="media" scope_info="1">sociallogin/img</base_url>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                            <a href="http://goo.gl/hZ9Bvr" target="_blank">
                            Download button Library
                            </a>
                            ]]></comment>
                        </wp_image>
                        <wp_image_label translate="label">
                            <label>Button image label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </wp_image_label>
                        <sort_order translate="label">
                            <label>Position number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sort_order>
                    </fields>
                </wp>
            </groups>
        </sociallogin>
    </sections>
</config>