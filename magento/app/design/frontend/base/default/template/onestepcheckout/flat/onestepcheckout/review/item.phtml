?>
<tr>
    <td>
        <a href="javascript:deleteproduct(<?php echo $_item->getId() ?>,'<?php echo $this->getUrl('onestepcheckout/index/deleteproduct', array('_secure' => true)); ?>','<?php echo $this->__('Are you sure?') ?>')"><img
