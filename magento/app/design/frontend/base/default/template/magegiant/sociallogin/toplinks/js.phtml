                    var bt_login = el.down('a');
                    if (bt_login) {
                        bt_login.href = 'javascript:socialLogin();';
                    }
                }
            });
        }
        $$('#header-account li').each(function (el) {
            if (el.down('a').href.indexOf('account/login/') != -1 || el.down('a').href.indexOf('wishlist') != -1) {
                var bt_login = el.down('a');
                if (bt_login) {
                    bt_login.href = 'javascript:socialLogin();';
                }
            }
        });
