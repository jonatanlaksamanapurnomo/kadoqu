<layout version="0.1.0">
    <onestepcheckout_remove_header_footer>
        <remove name="header"/>
        <remove name="footer"/>
        
        <reference name="after_body_start">
            <block type="page/html_header" name="osc_header" as="osc_header" template="onestepcheckout/page/header.phtml" />
        </reference>

        <reference name="before_body_end">
            <block type="page/html_footer" name="osc_footer" as="osc_footer" template="onestepcheckout/page/footer.phtml" />
        </reference>       
      
    </onestepcheckout_remove_header_footer>
    <onestepcheckout_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <!-- SellerDeck payment-->
            <action block="head" method="addCss" ifconfig="payment/paymentecommerce/show_logo">
                <stylesheet>css/sellerdeck/paymentecommerce/style.css</stylesheet>
            </action>
            <action method="addJs" ifconfig="payment/paymentecommerce/active"><script>magestore/onestepcheckout/sellerdeck-custom-review.js</script></action>
            <!-- Iways Paypalplus-->
            <block type="core/text" name="ppplus" ifconfig="payment/iways_paypalplus_payment/active">
                <action method="setText"><text><![CDATA[<script src="//www.paypalobjects.com/webstatic/ppplus/ppplus.min.js" type="text/javascript"></script>]]></text></action>
            </block>
            <!-- Amazon payment-->
            <action method="addJs" ifconfig="payment/amazon_payments/enabled">
                <script>prototype/window.js</script>
            </action>
            <action method="addItem" ifconfig="payment/amazon_payments/enabled">
                <type>js_css</type>
                <name>prototype/windows/themes/default.css</name>
            </action>
            <action method="addItem" ifconfig="payment/amazon_payments/enabled">
                <type>js_css</type>
                <name>prototype/windows/themes/alphacube.css</name>
            </action>
            <action method="addItem" ifconfig="payment/amazon_payments/enabled">
                <type>skin_css</type>
                <name>amazon_payments/css/popup_alphacube.css</name>
                <params/>
            </action>
            <block type="amazon_payments/script" ifconfig="payment/amazon_payments/enabled" name="amazon_payments.script" template="amazon_payments/script.phtml" />
            <!-- /Amazon scripts-->
            <action method="removeItem">
                <type>js</type>
                <name>varien/form.js</name>
                <params />
            </action> 
            <action method="addJs">
                <script>magestore/varien/form.js</script>
            </action>
            <action method="addJs">
                <script>magestore/onestepcheckout.js</script>
            </action>
            <action method="addJs">
                <script>magestore/calendar.js</script>
            </action>
            <action method="addJs">
                <script>calendar/calendar-setup.js</script>
            </action>
            <action method="addJs">
                <script>magestore/tinybox.js</script>
            </action>
            <action method="addJs">
                <script>magestore/window.js</script>
            </action>
            <action method="addJs">
                <script>magestore/geoip.js</script>
            </action> 
            <action method="addCss">
                <stylesheet>css/magestore/mobileonestepcheckout.css</stylesheet>
            </action>
            <action method="addCss">
                <stylesheet>css/magestore/tinybox.css</stylesheet>
            </action>
            <action method="removeItem">
                <type>skin_js</type>
                <name>sagepaysuite/js/sagePaySuite_Checkout.js</name>
                <params />
            </action> 
            <action method="addItem">
                <type>skin_js</type>
                <name>onestepcheckout/js/sagePaySuite_Checkout.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/opcheckout.js</name>
            </action>
        </reference>
        <reference name="before_body_end">
            <block type="onestepcheckout/onestepcheckout" template="onestepcheckout/general/content.phtml" name="osc_general_content" />
        </reference>
    </onestepcheckout_index_index>
	
