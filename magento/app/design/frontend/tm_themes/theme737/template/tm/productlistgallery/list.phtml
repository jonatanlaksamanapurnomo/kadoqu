    $plg_options_list = array(
        'image_width'          => Mage::getStoreConfig('productlistgallery/list/image_width', Mage::app()->getStore()),
        'image_height'         => Mage::getStoreConfig('productlistgallery/list/image_height', Mage::app()->getStore()),
