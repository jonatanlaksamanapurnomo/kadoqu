	<adminhtml_nwdrevslider_sliders>
		<update handle="nwdrevslider_common" />
		<reference name="master-view">
			<block type="nwdrevslider/adminhtml_slider_overview" name="view" as="view" template="nwdthemes/revslider/slider-overview.phtml">
