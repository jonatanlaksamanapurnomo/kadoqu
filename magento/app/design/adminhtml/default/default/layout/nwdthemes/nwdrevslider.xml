			</block>
		</reference>
	</adminhtml_nwdrevslider_slider>

	<adminhtml_nwdrevslider_slide>
		<update handle="nwdrevslider_common" />
		<update handle="nwdrevslider_images_common" />
		<reference name="master-view">
			<block type="nwdrevslider/adminhtml_slide_editor" name="view" as="view" template="nwdthemes/revslider/slide-editor.phtml">
				<block type="nwdrevslider/adminhtml_block_template" name="slide-selector" as="slide-selector" template="nwdthemes/revslider/templates/slide-selector.phtml" />
